<%= form_with(model: order_detail, local: true) do |form| %>
  <% if order_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= t('error') %></h2>

      <ul>
      <% order_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :order_id %>
    <%= form.number_field :order_id %>
  </div>
  
  <div class="field">
    <%= form.label :product_id %>
    <%= form.number_field :product_id %>
  </div>

  <div class="actions" >
    <%= form.submit nil, class:"btn btn-primary"  %>
  </div>
<% end %>

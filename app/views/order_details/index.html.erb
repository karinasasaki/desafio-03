<span style="color:green" ><%= notice %></span>

<h1><%= t('order_detail.title') %></h1>

<table class="table table-hover">
  <thead>
    <tr>
    <th><%= OrderDetail.human_attribute_name(:order_id) %></th>
    <th><%= OrderDetail.human_attribute_name(:product_id) %></th>
    <th><%= OrderDetail.human_attribute_name(:quantity) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
      <td><%= order_detail.order_id %></td>
      <td><%= order_detail.product_id %></td>
      <td><%= order_detail.quantity %></td>
        <td><%= link_to t('links.show'), order_detail %></td>
        <td><%= link_to t('links.edit'), edit_order_detail_path(order_detail) %></td>
        <td><%= link_to t('links.delete'), order_detail, method: :delete, data: { confirm: t('sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Menu', root_path, class:"btn btn-outline-primary" %>

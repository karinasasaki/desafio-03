<span style="color:green" ><%= notice %></span>

<h1>Order Details</h1>

<table class="table table-hover">
  <thead>
    <tr>
    <th>Quantity</th>
    <th>Order ID</th>
    <th>Product ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_details.each do |order_detail| %>
      <tr>
      <td><%= order_detail.quantity %></td>
      <td><%= order_detail.order_id %></td>
      <td><%= order_detail.product_id %></td>
        <td><%= link_to 'Show', order_detail %></td>
        <td><%= link_to 'Edit', edit_order_detail_path(order_detail) %></td>
        <td><%= link_to 'Destroy', order_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order Detail', new_order_detail_path, class:"btn btn-primary" %>
<%= link_to 'Menu', root_path, class:"btn btn-outline-primary" %>

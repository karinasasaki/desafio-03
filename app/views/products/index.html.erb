<p id="notice"><%= notice %></p>

<h1><%= @products.model_name.human(count: 2) %></h1>

<%
  if @products.empty?
    flash.notice = "Popule o estoque com o comando db:seed!"
  end
%>

<script>
//  $.notify('Popule o mercado com o comando db:seed', 'info')
</script>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @products.human_attribute_name(:id) %></th>
      <th><%= @products.human_attribute_name(:name) %></th>
      <th><%= @products.human_attribute_name(:price) %></th>
      <th><%= @products.human_attribute_name(:created_at) %></th>
      <th><%= @products.human_attribute_name(:updated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= datahora_br(product.created_at) %></td>
        <td><%= datahora_br(product.updated_at) %></td>
        <td><%= link_to t('links.show'), product %></td>
        <td><%= link_to t('links.edit'), edit_product_path(product) %></td>
        <td><%= link_to t('links.delete'), product, method: :delete, data: { confirm: t('sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.product'), new_product_path %>

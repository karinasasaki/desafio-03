<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>ID da compra</th>
      <th>Name</th>
      <th>Criado em</th>
      <th>Atualizado em</th>
      <th>Pessoa</th>
      <th>Produtos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.name %></td>
        <td><%= datahora_br(order.created_at) %></td>
        <td><%= datahora_br(order.updated_at) %></td>
        <td><%= order.person.name %></td>
        <td><%= order.product_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


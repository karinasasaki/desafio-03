<span style="color:green" ><%= notice %></span>

<h1><%= t('order.details') %></h1>

<p>
  <strong><%= Order.human_attribute_name(:id) %>: </strong>
  <%= @order.id %>
  <br>
  <strong><%= Order.human_attribute_name(:name) %>: </strong>
  <%= @order.name %>
  <br>
  <strong><%= Order.human_attribute_name(:created_at) %>: </strong>
  <%= datahora_br(@order.created_at) %>
  <br>
  <strong><%= Order.human_attribute_name(:updated_at) %>: </strong>
  <%= datahora_br(@order.updated_at) %>
  <br>
  <strong><%= Order.human_attribute_name(:person) %>: </strong>
  <%= @order.person.name %>
  <br><br>
  <strong><%= t('total_value') %>: </strong>
  <%= "R$ #{@order.total_value}"  %>
  <br>
  <strong><%= Order.human_attribute_name(:products) %>: </strong>
  <%= simple_format(@order.purchased_products) %>
</p>

<%= link_to t('links.edit'), edit_order_path(@order), class:"btn btn-primary"  %>
<%= link_to t('links.back'), orders_path, class:"btn btn-outline-primary"  %>

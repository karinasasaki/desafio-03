<p id="notice"><%= notice %></p>

<h1><h1><%= @people.model_name.human(count: 2) %></h1>
</h1>

<table>
  <thead>
    <tr>
      <th><%= @people.human_attribute_name(:id) %></th>
      <th><%= @people.human_attribute_name(:name) %></th>
      <th><%= Order.human_attribute_name(:id) %></th>
      <th><%= @people.human_attribute_name(:created_at) %></th>
      <th><%= @people.human_attribute_name(:updated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.id %></td>
        <td><%= person.name %></td>
        <td><%= person.order_ids %></td>
        <td><%= datahora_br(person.created_at) %></td>
        <td><%= datahora_br(person.updated_at) %></td>
        <td><%= link_to t('links.show'), person %></td>
        <td><%= link_to t('links.edit'), edit_person_path(person) %></td>
        <td><%= link_to t('links.delete'), person, method: :delete, data: { confirm: t('sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


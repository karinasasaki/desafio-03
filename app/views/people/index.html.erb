<span id="notice" style="color:green"><%= notice %></span>

<h1><%= Person.model_name.human(count: 2) %></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= Person.human_attribute_name(:name) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td class="col-1"><%= link_to t('links.show'), person, class: "btn btn-light btn-sm" %></td>
        <td class="col-1"><%= link_to t('links.edit'), edit_person_path(person), class: "btn btn-light btn-sm" %></td>
        <td class="col-1"><%= link_to t('links.delete'), person, method: :delete, data: { confirm: t('sure') }, class: "btn btn-light btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new.person'), new_person_path, class:"btn btn-primary" %>
<%= link_to 'Menu', root_path, class:"btn btn-outline-primary" %>
